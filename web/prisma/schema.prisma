generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String               @id @default(cuid())
  email                  String               @unique
  name                   String?
  password               String
  createdAt              DateTime             @default(now())
  updatedAt              DateTime             @updatedAt
  avatarUrl              String?
  bio                    String?
  timezone               String               @default("UTC")
  marketingEmails        Boolean              @default(true)
  productUpdates         Boolean              @default(true)
  weeklyDigestEmails     Boolean              @default(true)
  username               String               @unique
  googleId               String?              @unique
  twoFactorEnabled       Boolean              @default(false)
  twoFactorSecret        String?
  twoFactorTempSecret    String?
  twoFactorRecoveryCodes String[]             @default([])
  passwordResetTokens    PasswordResetToken[]
  readingListEntries     ReadingListEntry[]
  sessions               Session[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash, expiresAt])
  @@index([userId, expiresAt])
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String
  tokenHash String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  usedAt    DateTime?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AuthAttempt {
  id        String            @id @default(cuid())
  type      AuthAttemptType
  scope     AuthThrottleScope
  hash      String
  createdAt DateTime          @default(now())

  @@index([type, scope, hash, createdAt])
}

model ReadingListEntry {
  id            String   @id @default(cuid())
  userId        String
  mangaId       String
  title         String
  altTitles     String[]
  description   String?
  status        String?
  year          Int?
  contentRating String?
  demographic   String?
  latestChapter String?
  languages     String[]
  tags          String[]
  coverImage    String?
  url           String
  progress      String?
  rating        Float?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, mangaId])
  @@index([userId, updatedAt])
}

model RegistrationVerification {
  id           String   @id @default(cuid())
  email        String   @unique
  username     String   @unique
  name         String?
  passwordHash String
  tokenHash    String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

enum AuthAttemptType {
  LOGIN
  REGISTER
  FORGOT_PASSWORD
  RESET_PASSWORD
  VERIFY_EMAIL
}

enum AuthThrottleScope {
  IP
  IDENTIFIER
}
